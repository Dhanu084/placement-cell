<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/interviews.css" />
  </head>
  <body>
    <aside>
      <h4>Create Interview</h4>
      <form action="/interviews/create-interview" method="POST">
        <div>
          <input type="text" placeholder="company" name="company" />
        </div>

        <div>
          <input type="date" name="date" placeholder="date" />
        </div>

        <div>
          <button>Create Interview</button>
        </div>
      </form>
    </aside>

    <div id="main">
      <div id="available-interviews">
        <table>
          <tr id="headings">
            <td>company</td>
            <td>date</td>
          </tr>
          <% if (interviews.length>0) {%> <% for(interview of interviews) {%>
          <tr>
            <td>
              <a href="/interviews/single-interview/<%= interview.id %>"
                ><%= interview.company %></a
              >
            </td>
            <td>
              <%= interview.date.getDate()+"/"+interview.date.getMonth() %>
            </td>
          </tr>

          <%}%> <%}%>
        </table>
      </div>
    </div>
  </body>
</html>
